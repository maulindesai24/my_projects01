<div class="container-fluid px-4">
  <h1 class="mt-4">Dashboard</h1>
  
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="mb-3">Welcome to My Project</h2>
          <% if user_signed_in? %>
            <p class="text-success">You are logged in as <strong><%= current_user.name %></strong>.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="columns">
    <div class="col-xl-3 col-md-6">
      <div class="card bg-warning text-white mb-4">
        <div class="card-body">Posts</div>
        <div class="card-footer d-flex align-items-center justify-content-between">
          <%= Post.count %> total
          <%= link_to "View", posts_path, class: "small text-white stretched-link" %>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6">
      <div class="card bg-success text-white mb-4">
        <div class="card-body">Tasks</div>
        <div class="card-footer d-flex align-items-center justify-content-between">
          <%= Task.count %> assigned
          <% if current_user.admin? %>
            <%= link_to "View", admin_tasks_path, class: "small text-white stretched-link" %>
          <% else %>
            <%= link_to "View", tasks_path, class: "small text-white stretched-link" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
