<div class="container-fluid px-4">
  <h1 class="mt-4">Tasks</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">All Tasks</li>
  </ol>

  <div class="mb-3">
    <%= link_to "Create New Task", new_admin_task_path, class: "btn btn-primary" %>
  </div>

  <div class="card mb-4">
    <div class="card-header"><i class="fas fa-table me-1"></i>Task List</div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Assigned_by</th>
            <th>Created</th>
            <th>Actions</th>
            <th>Assigned_user_name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.title, task_path(task) %></td>
              <td><%= task.user.email %></td>
              <td><%= task.created_at.strftime("%d %b %Y") %></td>
              <td>
                <%= link_to "Comment", task_path(task), class: "btn btn-sm btn-info" %>
                <% if task.user == current_user %>
                  <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-warning me-1" %>
                  <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                <% else %>
                  <span class="text-muted">N/A</span>
                <% end %>
                <% like = task.likes.find_by(user: current_user) %>
                <% if like %>
                  <%= button_to 'Unlike', like_path(like), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                <% else %>
                  <%= button_to 'Like', likes_path(likeable_type: "Task", likeable_id: task.id), method: :post, class: "btn btn-sm btn-outline-primary"%>
                <% end %>
                <p><%= pluralize(task.likes.count, "like") %></p>
              </td>
              <td><%= task.assigned_user.email if task.assigned_user %></td>
              <td>
                <%= form_with(model: task, url: admin_task_path(task), method: :patch, local: true) do |f| %>
                  <%= f.check_box :completed, { checked: task.completed, onchange: 'this.form.submit();' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
